<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="15dp"
        android:layout_margin="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/prfImage"
            android:layout_width="35dp"
            android:layout_height="35dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/image_profile"
            />

        <LinearLayout
            android:id="@+id/chatCon"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/prfImage"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/chat_bubble"
            android:orientation="vertical"
            android:layout_marginStart="5dp"
            >

            <TextView
                android:id="@+id/chatUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ali"
                android:textColor="@color/asosiy_rang"
                android:textSize="13sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/chatTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="First and foremost, let me tell you that Dubai is everything I dreamt more."
                android:textColor="@color/text_medium"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </LinearLayout>




        <ImageView
            android:id="@+id/doubleCheck"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/icon_double_check"
            app:layout_constraintBottom_toBottomOf="@id/chatCon"
            app:layout_constraintStart_toEndOf="@id/chatCon"
            app:layout_constraintTop_toTopOf="@id/chatCon" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/icon_double_check"
            app:layout_constraintBottom_toBottomOf="@id/chatCon"
            app:layout_constraintStart_toEndOf="@id/chatCon"
            app:layout_constraintTop_toTopOf="@id/chatCon" />

        <TextView
            android:id="@+id/chatDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="10:00"
            android:textColor="@color/text_medium"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="@id/chatCon"
            app:layout_constraintStart_toEndOf="@id/doubleCheck"
            app:layout_constraintTop_toTopOf="@id/chatCon" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>