<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imgPrf"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:src="@drawable/ic_prf_circle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/namePrf"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_50sdp"
        android:text="Kanallani Dodasi"
        android:textSize="@dimen/_12sdp"
        app:layout_constraintBottom_toTopOf="@id/detailPrf"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/imgPrf"
        app:layout_constraintTop_toTopOf="@id/imgPrf" />

    <TextView
        android:id="@+id/detailPrf"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_50sdp"
        android:text="Kanallani Dodasi"
        android:textSize="@dimen/_10sdp"
        app:layout_constraintBottom_toBottomOf="@id/imgPrf"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/imgPrf"
        app:layout_constraintTop_toBottomOf="@id/namePrf" />

    <TextView
        android:id="@+id/datePrf"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:text="16:16"
        android:textSize="@dimen/_12sdp"
        app:layout_constraintBottom_toTopOf="@id/detailPrf"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/imgPrf" />

    <TextView
        android:id="@+id/messageCountPrf"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/back_count"
        android:text="5"
        android:textColor="@color/white"
        android:textSize="@dimen/_10sdp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@id/imgPrf"
        app:layout_constraintEnd_toEndOf="@id/datePrf"
        app:layout_constraintStart_toStartOf="@id/datePrf"
        app:layout_constraintTop_toBottomOf="@id/datePrf" />


</androidx.constraintlayout.widget.ConstraintLayout>