<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/screen_back"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/ln_btn_back"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="33dp"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/ic_back"
        app:tint="@color/text_color_bold"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:text="Kirish"
        android:textColor="@color/text_bold"
        android:textSize="22sp"
        app:layout_constraintTop_toTopOf="@id/ln_btn_back"
        app:layout_constraintBottom_toBottomOf="@id/ln_btn_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:fontFamily="@font/montserrat_regular"
        />

    <TextView
        android:id="@+id/emailTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/font_family_medium"
        app:layout_constraintTop_toBottomOf="@id/ln_btn_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Telefon raqamingizni kiriting"
        android:textColor="@color/text_medium"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/edt_gmail"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/shape_unselected"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/emailTxt"
        android:singleLine="true"
        android:textColor="@color/text_bold"
        android:textColorHint="@color/text_medium"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/txtPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@id/edt_gmail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:text="Parolingizni kiriting"
        android:fontFamily="@font/font_family_medium"
        android:textColor="@color/text_medium"
        android:textSize="16sp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_password"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/txtPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/shape_unselected"
        android:gravity="center_vertical"
        app:endIconMode="password_toggle"
        app:endIconTint="@color/text_medium"
        app:hintEnabled="false">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tiet_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textColor="@color/text_bold"
            android:textColorHint="@color/text_medium"
            android:textSize="16sp"
            android:textCursorDrawable="@null"/>

    </com.google.android.material.textfield.TextInputLayout>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/mb_sent_sms_code"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/back_style_foreground"
        android:text="Kirish"
        app:layout_constraintTop_toBottomOf="@id/til_password"
        android:textColor="@color/oq"
        android:textSize="16sp"
        android:textAllCaps="false"
        app:cornerRadius="6dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/sign_up_btn"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/back_button"
        android:text="Ro'yhatdan o'tish"
        app:layout_constraintTop_toBottomOf="@id/mb_sent_sms_code"
        android:textColor="@color/text_medium"
        android:textAllCaps="false"
        android:textSize="16sp"
        />


    <TextView
        android:id="@+id/tv_Forgot_your_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/font_family_medium"
        app:layout_constraintTop_toBottomOf="@id/sign_up_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Parolni unutdingizmi ?"
        android:textColor="@color/text_medium"
        android:textSize="18sp" />

