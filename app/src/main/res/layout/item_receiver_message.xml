<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/chatTextView"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:text="First and foremost, let me tell you that Dubai is everything I dreamt more."
            android:textColor="@color/text_medium"
            android:textSize="14sp"
            android:padding="12dp"
            android:background="@drawable/chat_bubble"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />



        <TextView
            android:id="@+id/chatDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="10:00"
            android:textColor="@color/text_medium"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="@id/chatTextView"
            app:layout_constraintStart_toEndOf="@id/chatTextView"
            app:layout_constraintTop_toTopOf="@id/chatTextView" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>